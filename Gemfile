source 'https://rubygems.org'
ruby "2.0.0"
gem 'sinatra' # our web framework
gem 'shotgun' # for live code reloading
gem 'sinatra-partial'  #for split erb files to parts
gem 'rack-flash3' #for showing flash messages for user
gem 'data_mapper'  #data mapper with sinatra and postgress
gem 'dm-postgres-adapter' #adapter to work with postgress
gem 'capybara' #testing client side
gem 'database_cleaner' #to clean the database after the test
group :development, :test do
  gem "rspec"  #testing server side
end
